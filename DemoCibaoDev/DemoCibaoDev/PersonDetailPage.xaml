<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoCibaoDev.PersonDetailPage"
             Title="Detail">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="#2196F3">
                <Image x:Name="imagePerson" HorizontalOptions="Center" HeightRequest="100" />
                <Label x:Name="nombreCompletoLabel" Text="" FontSize="Small" XAlign="Center" HorizontalOptions="Center"
							TextColor="White"/>

            </StackLayout>
            <StackLayout Padding="10">
                <Label Text="Teléfono" VerticalOptions="Start" TextColor="Black"/>
                <Label x:Name="phoneLabel" VerticalOptions="End" TextColor="Black"/>

                <Label Text="Email" VerticalOptions="Start" TextColor="Black"/>
                <Label x:Name="emailLabel" VerticalOptions="End" TextColor="Black"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>